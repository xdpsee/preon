<?xml version="1.0"?>
<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/etc</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>COPYING</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>doc/api</outputDirectory>
      <directory>target/site/apidocs</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>doc</outputDirectory>
      <directory>preon-binding/target/site/*.pdf</directory>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>nl.flotsam.preon:preon-binding</include>
        <include>nl.flotsam.preon:preon-bitbuffer</include>
      </includes>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <outputFileNameMapping>${module.artifactId}-${module.version}.${module.extension}</outputFileNameMapping>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <outputDirectory>lib/ext</outputDirectory>
            <outputFileNameMapping>${module.artifactId}-${module.version}.${module.extension}</outputFileNameMapping>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>